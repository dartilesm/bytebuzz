{
  "$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**",
      "!**/*.json",
      "!**/.vscode/**",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/.next/**",
      "!**/build/**",
      "!**/coverage/**",
      "!**/public/**",
      "!**/supabase/functions/**"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": false,
      "a11y": {
        "noAriaUnsupportedElements": "warn",
        "noHeaderScope": "error",
        "noPositiveTabindex": "error",
        "noSvgWithoutTitle": "error",
        "useAltText": "warn",
        "useAriaPropsForRole": "warn",
        "useButtonType": "warn",
        "useKeyWithClickEvents": "off",
        "useMediaCaption": "error",
        "useSemanticElements": "warn",
        "useValidAnchor": "warn",
        "useValidAriaProps": "warn",
        "useValidAriaValues": "warn",
        "useValidLang": "error"
      },
      "complexity": {
        "noBannedTypes": "error",
        "noForEach": "warn",
        "noStaticOnlyClass": "error",
        "noUselessConstructor": "error",
        "noUselessTypeConstraint": "error",
        "noArguments": "error"
      },
      "correctness": {
        "noChildrenProp": "error",
        "noConstAssign": "off",
        "noGlobalObjectCalls": "off",
        "noInvalidBuiltinInstantiation": "off",
        "noInvalidConstructorSuper": "off",
        "noSetterReturn": "off",
        "noUndeclaredVariables": "off",
        "noUnreachable": "off",
        "noUnreachableSuper": "off",
        "noUnusedImports": "error",
        "noUnusedVariables": "error",
        "useExhaustiveDependencies": "warn",
        "useHookAtTopLevel": "error",
        "useJsxKeyInIterable": "error"
      },
      "performance": {
        "noDelete": "error"
      },
      "security": {
        "noDangerouslySetInnerHtmlWithChildren": "error",
        "noBlankTarget": "error"
      },
      "style": {
        "noNamespace": "off",
        "noNonNullAssertion": "error",
        "noParameterAssign": "error",
        "noRestrictedImports": {
          "level": "error",
          "options": {
            "patterns": [
              {
                "group": ["../**", "./**"],
                "message": "Relative imports are not allowed. Use absolute imports with @/ alias instead."
              }
            ]
          }
        },
        "useAsConstAssertion": "error",
        "useConst": "error",
        "useDefaultParameterLast": "error",
        "useEnumInitializers": "error",
        "useExportType": "error",
        "useImportType": "error",
        "useTemplate": "error",
        "useArrayLiterals": "off"
      },
      "suspicious": {
        "noClassAssign": "off",
        "noCommentText": "error",
        "noConstEnum": "off",
        "noDuplicateClassMembers": "off",
        "noDuplicateJsxProps": "error",
        "noDuplicateObjectKeys": "off",
        "noDuplicateParameters": "off",
        "noEmptyInterface": "error",
        "noExplicitAny": "off",
        "noExtraNonNullAssertion": "error",
        "noFunctionAssign": "off",
        "noImportAssign": "off",
        "noMisleadingInstantiator": "error",
        "noRedeclare": "off",
        "noRedundantUseStrict": "error",
        "noUnsafeDeclarationMerging": "error",
        "noUnsafeNegation": "off",
        "useGetterReturn": "off",
        "useNamespaceKeyword": "error",
        "noWith": "off",
        "noVar": "error",
        "noConsole": {
          "level": "warn",
          "options": {
            "allow": ["log"]
          }
        }
      }
    },
    "includes": [
      "**",
      "!**/node_modules/**",
      "!**/.next/**",
      "!**/out/**",
      "!**/build/**",
      "!**/next-env.d.ts"
    ]
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  },
  "javascript": {
    "formatter": {
      "trailingCommas": "all",
      "semicolons": "always",
      "quoteStyle": "double"
    },
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    },
    "globals": [
      "React",
      "ononline",
      "OffscreenCanvas",
      "onpointerleave",
      "onpointerenter",
      "onemptied",
      "onmouseenter",
      "onkeypress",
      "onloadeddata",
      "oninvalid",
      "onmouseup",
      "onvolumechange",
      "onpointerout",
      "onstorage",
      "onpause",
      "onkeyup",
      "onabort",
      "onanimationstart",
      "onafterprint",
      "onblur",
      "ondurationchange",
      "onwaiting",
      "ondeviceorientation",
      "oncanplaythrough",
      "onclose",
      "onbeforeunload",
      "onanimationend",
      "onmouseleave",
      "oncancel",
      "onseeked",
      "onpointerover",
      "ondragleave",
      "ongotpointercapture",
      "onloadedmetadata",
      "onpageshow",
      "onplay",
      "onunhandledrejection",
      "onbeforeprint",
      "onstalled",
      "oncontextmenu",
      "onreset",
      "onpointercancel",
      "onsubmit",
      "ondrag",
      "onload",
      "onlostpointercapture",
      "onsuspend",
      "ondragstart",
      "onpagehide",
      "onmessage",
      "location",
      "onoffline",
      "onappinstalled",
      "onrejectionhandled",
      "onunload",
      "onwheel",
      "onended",
      "onmousedown",
      "onpointerup",
      "onmouseover",
      "onkeydown",
      "onclick",
      "onfocus",
      "onscroll",
      "onresize",
      "onsearch",
      "ontoggle",
      "exports",
      "oncanplay",
      "onlanguagechange",
      "onpointerdown",
      "ondeviceorientationabsolute",
      "ondragenter",
      "onauxclick",
      "onerror",
      "onpointermove",
      "onmousemove",
      "ondevicemotion",
      "ondrop",
      "onhashchange",
      "onanimationiteration",
      "ondblclick",
      "onratechange",
      "ontransitionend",
      "ondragend",
      "onpopstate",
      "onplaying",
      "onchange",
      "onselect",
      "onbeforeinstallprompt",
      "onmouseout",
      "ontimeupdate",
      "ondragover",
      "oncuechange",
      "onprogress",
      "onloadstart",
      "onseeking",
      "oninput",
      "onmessageerror",
      "onmousewheel"
    ]
  }
}
