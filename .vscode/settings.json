{
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "javascript.preferences.importModuleSpecifier": "non-relative",
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "files.associations": {
    "*.css": "tailwindcss",
    "supabase/functions/**/*.ts": "typescript",
    "supabase/functions/**/*.tsx": "typescriptreact"
  },
  // Deno settings for Edge Functions
  "deno.enable": true,
  "deno.lint": true,
  "deno.enablePaths": [
    "supabase/functions"
  ],
  // Use Deno language server for Edge Functions
  "deno.config": "./supabase/**/deno.json",
}